<%- include('header') -%>


<h2 class="p-5 d-inline-block text-center"> <%= data.helyiseg.nev %> </h2>
<a class="btn btn-sm btn-link" href="/">Vissza</a>

<h5 class="px-5">Megjegyzés:</h5>
<p class="px-5">
    <%= data.helyiseg.megjegyzes %>
</p>

<h5 class="p-5">Eszközök:</h5>

<div class="container">
    <div class="row">
        <div class="col-12">
            <table class="table table-striped table-bordered">
                <tr>
                    <th>Megnevezés</th>
                    <th>Mennyiség</th>
                    <th>Megjegyzés</th>
                    <th>&nbsp;</th>
                </tr>

                <% data.eszkoz.forEach(function(egyEszkoz){ %>
                    <tr>
                        <td> <%=egyEszkoz.nev%> </td>
                        <td> <%=egyEszkoz.mennyiseg%> </td>
                        <td> <%=egyEszkoz.megjegyzes%> </td>
                        <td>
                            <a href="/eszkoz/<%=data.helyiseg.id%>/edit/<%=egyEszkoz.id%>" class="btn btn-sm btn-outline-primary"><i class="fas fa-edit"></i> Módosítás</a>
                            <a href="/eszkoz/<%=data.helyiseg.id%>/delete/<%=egyEszkoz.id%>" class="btn btn-sm btn-outline-danger"><i class="fas fa-trash"></i> Törlés</a>
                        </td>
                    </tr>
                <% }); %>

            </table>

            <a class="btn btn-primary" href="/eszkoz/<%= data.helyiseg.id %>/new">Új eszköz felvétele</a>



        </div>
    </div> <!-- End of row -->
</div> <!-- End of container -->

<%- include('footer') -%>