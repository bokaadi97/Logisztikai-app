<%- include('header') -%>


<h1 class="text-center p-5">Új eszköz felvétele</h1>


<div class="d-flex justify-content-center">
    <form class="w-25" method="POST">
        <div class="form-group">
            <label for="nevInput">Eszköz megnevezése</label> <!-- a label for-ja a hivatkozott input id-jával kell megegyezzen -->
            <input type="text" class="form-control" id="nevInput" name="nev" placeholder="Név">
        </div>
        <div class="form-group">
            <label for="mennyisegInput">Mennyiség</label>
            <input type="text" class="form-control" id="mennyisegInput" name="mennyiseg" placeholder="Mennyiség">
        </div>
        <div class="form-group">
            <label for="megjegyzesInput">Megjegyzés</label>
            <input type="text" class="form-control" id="megjegyzesInput" name="megjegyzes" placeholder="Megjegyzés">
        </div>

        <button type="submit" class="btn btn-primary">Mentés</button>
        <a class="btn btn-link" href="/helyiseg/<%=data.helyiseg.id%>">Mégse</a>
    </form>
</div>

<%- include('footer') -%>
